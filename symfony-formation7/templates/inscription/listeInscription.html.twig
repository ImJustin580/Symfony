<h2>Liste des inscription possible au formation</h2>

{% if (message) %}
    <div class="alert alert-warning">{{ message }}</div>
{% endif %}

{% for message in app.flashes('success') %}
    <div class="alert alert-custom">{{ message }}</div>
{% endfor %}

{% for message in app.flashes('warning') %}
    <div class="alert alert-warning">{{ message }}</div>
{% endfor %}
    {% if ensFormations is empty %}
        <p>Aucune formation disponible.</p>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>Date de début</th>
                    <th>Nombre d'heures</th>
                    <th>Département</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for formation in ensFormations %}
                    <tr>
                        <td>{{ formation.dateDebut|date("m/d/Y") }}</td>
                        <td>{{ formation.nbreHeures }}</td>
                        <td>{{ formation.departement }}</td>
                        <td>
                            <a href="{{ path('app_formation_inscription', {'id': formation.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir vous inscrire à cette formation ?');">S'inscrire</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
<div>
    <a href="{{ path('app_deconnexion') }}" class="btn btn-primary" onclick="return confirm('Êtes-vous sûr de vouloir vous deconnectez ?');">Déconnexion</a>
</div>

<!-- Bouton pour ajouter une nouvelle formation -->
<div style="margin-top: 20px;">
</div>

